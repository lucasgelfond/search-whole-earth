{
	"name": "ts-easy",
	"version": "1.0.0",
	"description": "",
	"main": "dist/main.js",
	"scripts": {
		"dev": "dotenv -e .env -- tsx --watch ./src/main.ts",
		"build": "tsup --config build.ts",
		"start": "dotenv -e .env -- node ./dist/main.js",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"typecheck": "tsc --noEmit",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/node": "^18.11.18",
		"tsup": "^8.1.0",
		"tsx": "^4.20.6",
		"typescript": "*"
	},
	"dependencies": {
		"dotenv": "^16.4.5",
		"dotenv-cli": "^7.4.2",
		"zod": "^3.21.4"
	},
	"author": "",
	"license": "ISC"
}
